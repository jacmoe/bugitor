{
  "name": "jacmoe/yii2-app-basic-gulp-sass",
  "description": "Yii 2 Basic Project Template with Gulp and Sass support",
  "keywords": ["yii2", "framework", "basic", "sass", "gulp", "project template"],
  "type": "project",
  "license": "MIT",
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.4.0",
    "yiisoft/yii2": ">=2.0.5",
    "yiisoft/yii2-bootstrap": "*",
    "yiisoft/yii2-swiftmailer": "*",
    "bower-asset/font-awesome": "^4.5",
    "bower-asset/bootstrap-sass": "3.3.6",
    "jacmoe/yii2-mdpages-module": "^0.6.0",
    "dmstr/yii2-migrate-command": "^0.3.1",
    "cebe/yii2-gravatar": "^1.1",
    "dektrium/yii2-user": "^0.9.5",
    "himiklab/yii2-recaptcha-widget": "^1.0",
    "dektrium/yii2-rbac": "^0.2.0"
  },
  "require-dev": {
    "yiisoft/yii2-codeception": "*",
    "yiisoft/yii2-debug": "*",
    "yiisoft/yii2-gii": "*",
    "yiisoft/yii2-faker": "*"
  },
  "config": {
    "process-timeout": 1800
  },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject",
            "npm install",
            "gulp build"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
