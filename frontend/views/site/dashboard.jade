-use yii\helpers\Html
-use dektrium\user\models\User
-$view->title=Yii::t('app', 'Dashboard')
-$view->beginBlock('content-header')
|#{$view->title} <small>all your bugs are belong to us</small>
-$view->endBlock()
.col-md-12
  .panel.panel-default
    .panel-heading
      h3.panel-title
        i.fa.fa-rocket
        |My projects
    .panel-body
      -foreach ($projects as $project) {
        .col-md-3
          div: !=$project->name
          div: !=Html::a(Yii::t('app', 'View project'), ['project/overview', 'identifier' => $project->identifier])
      -}
    .panel-footer
.col-md-6
  .panel.panel-default
    .panel-heading
      h3.panel-title
        i.fa.fa-ticket
        |Issues owned by me
    .panel-body
    .panel-footer
  .panel.panel-default
    .panel-heading
      h3.panel-title
        i.fa.fa-ticket
        |Issues reported by me
    .panel-body
      !=User::findIdentity(1)->username
    .panel-footer
  .panel.panel-default
    .panel-heading
      h3.panel-title
        i.fa.fa-ticket
        |Watched issues
    .panel-body
    .panel-footer
.col-md-6
  .panel.panel-default
    .panel-heading
      h3.panel-title
        i.fa.fa-check-square-o
        |Tasklist
    .panel-body
    .panel-footer
  .panel.panel-default
    .panel-heading
      h3.panel-title
        i.fa.fa-clock-o
        |Recent activity
    .panel-body
    .panel-footer
  .panel.panel-default
    .panel-heading
      h3.panel-title
        i.fa.fa-commenting
        |Recent conversation
    .panel-body
    .panel-footer
