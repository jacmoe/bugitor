-use yii\helpers\Html
-use yii\grid\GridView
-use yii\bootstrap\ButtonDropdown
-$view->title = 'Issues'
-$view->params['breadcrumbs'][] = $view->title
-$logged_in = !Yii::$app->user->isGuest
.issue-index
  .clearfix
    p.pull-left
      if $logged_in
        !=Html::a('<span class="glyphicon glyphicon-plus"></span> New Issue', ['create'],['class' => 'btn btn-success'])
  -
    $columns = ['id','tracker_id', 'project_id', 'subject',
    'description:ntext', 'issue_category_id', 'user_id', ['class' => 'yii\\grid\\ActionColumn',
     'contentOptions' => ['nowrap'=>'nowrap'] ] ]

  !=GridView::widget(['dataProvider'=> $dataProvider,'filterModel'=> $searchModel,'columns'=> $columns])
