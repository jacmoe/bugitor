-use yii\helpers\Html
-use frontend\assets\AppAsset
-AppAsset::register($view)
-dmstr\web\AdminLteAsset::register($view)
-$directoryAsset = Yii::$app->assetManager->getPublishedUrl('@vendor/almasaeed2010/adminlte/dist')
-$view->beginPage()

doctype html
html(lang=Yii::$app->language)
  head
    meta(charset=Yii::$app->charset)
    meta(name="viewport", content="width=device-width,
        initial-scale=1")
    !=Html::csrfMetaTags()
    title #{$view->title} | Bugitor
    -$view->head()

    // Favicons
    link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
    link(rel="apple-touch-icon", href="/apple-touch-icon.png")
    link(rel="apple-touch-icon", sizes="57x57", href="/apple-touch-icon-iphone.png")
    link(rel="apple-touch-icon", sizes="72x72", href="/apple-touch-icon-ipad.png")
    link(rel="apple-touch-icon", sizes="114x114", href="/apple-touch-icon-iphone4.png")
    link(rel="apple-touch-icon", sizes="144x144", href="/apple-touch-icon-ipad3.png")

  -$theme = \dmstr\helpers\AdminLteHelper::skinClass()
  body(class="hold-transition sidebar-mini #{$theme}")
    -$view->beginBody()
    .wrapper
      !=$view->render('header', ['directoryAsset' => $directoryAsset])
      !=$view->render('left', ['directoryAsset' => $directoryAsset])
      !=$view->render('content', ['content' => $content, 'directoryAsset' => $directoryAsset])
    -$view->endBody()
-$view->endPage()
